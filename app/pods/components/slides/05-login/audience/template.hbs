{{#slide.content as |content|}}
  <div class="self-center p-4 mb-4 flex">
    <h1 class="flex-shrink">🔈</h1>
    <h3 class="text-orange flex-1">Please turn up your sound</h3>
  </div>

  <div class="self-center p-4 m-4 text-grey-darker">
    {{#if audio.isSpriteLoaded}}
      <p>Test with these 🥁</p>

      {{#each (array 'kick' 'snare' 'clap') as |sound|}}
        {{content.button
          text=sound
          onClick=(action 'play' sound target=audio)
          class="w-full mt-4"
        }}
      {{/each}}
    {{else}}
      <p>Loading audio...</p>
    {{/if}}
  </div>
{{/slide.content}}
