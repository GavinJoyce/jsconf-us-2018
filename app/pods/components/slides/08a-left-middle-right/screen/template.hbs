</div>

{{#slide.content}}
  <div class="self-center p-4 mb-4 text-8xl text-orange">
    <h1 class="font-hershey">Which section are you in?</h1>
  </div>

  <div class="self-center w-3/5 flex justify-between content-start flex-wrap p-4 mb-4 m-16 font-hershey">
    {{#each (array 'left' 'middle' 'right') as |section|}}
      <div class="w-1/3 py-8">
        <h2 class="text-blue-light text-10xl pb-4">{{section}}</h2>
        <h2 class="text-yellow text-14xl font-thin">{{or (get counts section) 0}}</h2>
      </div>
    {{/each}}
  </div>
{{/slide.content}}

