<div class="pin absolute bg-yellow">
  {{#if session.isConnected}}
    <h2 class="p-4">Smartphone Symphony</h2>

    {{#if session.invalidLogin}}
      <h4 class="p-4 text-red">
        Sorry, that name is taken. Please try another one
      </h4>
    {{/if}}

    <div class='p-4'>
      {{input
        value=username
        placeholder="Your name"
        enter="register"
        classNames='shadow appearance-none rounded w-full py-2 px-3 text-grey-darker mb-3'
        autoFocus=true
      }}
    </div>

    {{#if showOptions}}
      <div class='p-4 pt-2'>
        {{input
          value=password
          placeholder="Password"
          type="password"
          classNames='shadow appearance-none rounded w-full py-2 px-3 text-grey-darker mb-3'
        }}
      </div>

      <div class='p-4 pt-2'>
        {{#each
          (array
            (hash username='screen' password='screenpassword')
            (hash username='presenter' password='presenterpassword')
            (hash username='audience 1' password='')
            (hash username='audeince 2' password='')
            (hash username='audience 3' password='')
            (hash username='audience 4' password='')
            (hash username='ableton' password='abletonpassword')
          ) as |login|
        }}
          <button
              onclick={{action 'login' login.username login.password target=session}}
              disabled={{session.isLoggingIn}}
              class="bg-white hover:bg-blue text-blue-dark hover:text-white py-2 px-4 border border-blue hover:border-transparent rounded"
            >
              {{login.username}}
            </button>
        {{/each}}
      </div>

    {{/if}}

    <div class='p-4 pt-2'>
      {{#if session.loginTask.isRunning}}
        <div>loading...</div>
      {{else}}
        <button
          onclick={{action 'register'}}
          disabled={{session.loginTask.isRunning}}
          class='bg-blue hover:bg-blue-dark text-white font-bold py-2 px-4 rounded'
        >
          Next Â»
        </button>
      {{/if}}
    </div>
  {{else}}
    <h2 class="p-4">Connecting...</h2>
  {{/if}}
</div>


