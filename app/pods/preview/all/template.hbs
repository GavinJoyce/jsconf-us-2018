<style>
  .iframe-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    grid-gap: 10px;
    width: 100vw;
    height: 100vh;
    padding: 0;
    margin: 0;
    background-color: #333;
  }

  .iframe-grid iframe {
    position: relative;
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    border: 1px solid yellow;
  }

  iframe.responsive {
    width: 90%;
    margin: auto;
    background-color: #eee;
  }

  iframe.screen {
    background-color: #03a9f4;
     grid-column: span 3;
  }

  iframe.presenter {
    background-color: #e91e63;
  }

  iframe.audience {
    background-color: #ffeb3b;
  }

  iframe.ableton {
    background-color: #aaff3b;
     grid-row: span 2;

  }
</style>

<div class='iframe-grid'>
  <iframe src='{{href-to "login"}}' class='scaled screen' />
  <iframe src='{{href-to "login"}}' class='responsive ableton' />
  <iframe src='{{href-to "login"}}' class='responsive presenter' />
  <iframe src='{{href-to "login"}}' class='responsive audience' />
  <iframe src='{{href-to "login"}}' class='responsive audience' />
</div>
