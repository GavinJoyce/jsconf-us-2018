<style>
  .iframe-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    grid-gap: 10px;
    width: 100vw;
    height: 100vh;
    padding: 0;
    margin: 0;
    background-color: #333;
  }

  .iframe-grid iframe {
    position: relative;
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    border: 1px solid black;
  }

  iframe.responsive {
    width: 90%;
    margin: auto;
  }

  iframe.screen {
     grid-column: span 5;
  }

  iframe.ableton {
    grid-row: span 2;
  }
</style>

<div class='iframe-grid'>
